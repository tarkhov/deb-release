#!/bin/sh

version=$1
if [ ! $version ]; then
    echo "Package version not provided."
    exit
fi

revision=$2
if [ ! $revision ]; then
    echo "Revision number not provided."
    exit
fi

# dch -v version-revision - https://www.debian.org/doc/manuals/maint-guide/update.html
text=$3
if [ ! $text ]; then
    text="release"
fi

dch -v $version-$revision $text
